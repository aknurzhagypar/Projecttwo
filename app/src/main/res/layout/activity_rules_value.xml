<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".RulesValueActivity">

    <ImageButton
         android:id="@+id/go_next_meal_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covid_rectangle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Правила и ценность питания"
        android:layout_marginTop="19dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        />





    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="83dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/babyeat" />



    <androidx.cardview.widget.CardView
        android:id="@+id/meal_article_fromrv"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="104dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/hrec3" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Почему питание так важно"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/go_breastfeeding_article"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="104dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/hrec2" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Грудное вскармливание от 0  до 2 лет"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/calendar_homep" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hospital" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/person_icon" />
    </RelativeLayout>

</RelativeLayout>